<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <center>
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-group" }) do |f| %>

          <%= f.label :email %><br />
          <div class="field">
          <%= f.email_field :email, autofocus: true, class: 'form-control transparent-input' %>
        </div>


          <%= f.label :password %><br />
          <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control transparent-input' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </center>
    </div>
  </div>
</div>
